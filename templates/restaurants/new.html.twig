{% extends 'base.html.twig' %}
{% block title %} New Restaurants {% endblock %}
{% block body %}
    <div class="wrapper">
        <div class="main-panel">
            {% include 'navigation.html.twig' %}
            {% include 'alert.html.twig' %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title">New Restaurant</h4>
                                <p class="card-category">Complete your profile</p>
                            </div>
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card-body">
                                        {{ form_row(form.name) }}
                                        {{ form_row(form.userId) }}
                                        <div class="row">
                                            <div class="col-md-6">
                                                {{ form_row(form.hall1) }}
                                            </div>
                                            <div class="col-md-6">
                                                {{ form_row(form.hall2) }}
                                            </div>
                                        </div>
                                        {{ form_row(form.region) }}
                                        <p>
                                            <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                                              Upload max 5 photo
                                            </a>
                                        </p>
                                        <div class="collapse" id="collapseExample">
                                            <div class="card card-body">
                                                {{ form_widget(form.coverPath) }} Cover Image
                                                {{ form_widget(form.image1) }} Image 1
                                                {{ form_widget(form.image2) }} Image 2
                                                {{ form_widget(form.image3) }} Image 3
                                                {{ form_widget(form.image4) }} Image 4
                                            </div>
                                        </div>
                                        {{ form_row(form.comment) }}
                                        {{ form_row(form.active, {label_attr: {class: 'checkbox-custom'} }) }}

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.menu|raw) }}

                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
