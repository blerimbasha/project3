{% extends 'base.html.twig' %}
{% block title %} New Restaurants {% endblock %}
{% block body %}
    <div class="wrapper">
        <div class="main-panel">
            {% include 'navigation.html.twig' %}
            {% include 'alert.html.twig' %}
            <h1>New Restaurant</h1>
            {{ form_start(form) }}
            {{ form_row(form.name)}}
            {{ form_row(form.userId)}}
            {{ form_row(form.hall1)}}
            {{ form_row(form.hall2)}}
            {{ form_row(form.region)}}
            {{ form_row(form.comment)}}
            {{ form_row(form.active, {label_attr: {class: 'checkbox-custom'} }) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
