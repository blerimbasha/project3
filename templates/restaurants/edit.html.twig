{% extends 'base.html.twig' %}
{% block title %} Edit Restaurant {% endblock %}
{% block body %}
    <div class="wrapper">
        <div class="main-panel">
            {{ include('navigation.html.twig') }}
            <h1>Restaurants</h1>

            {{ form_start(form) }}
            {{ form_row(form.name)}}
            {{ form_row(form.userId)}}
            {{ form_row(form.hall1)}}
            {{ form_row(form.hall2)}}
            {{ form_row(form.region)}}
            {{ form_row(form.comment)}}
            {{ form_row(form.active, {label_attr: {class: 'checkbox-custom'} }) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
