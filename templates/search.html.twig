<div class="card">
    {{ form_start(form) }}
    <div class="col-lg-10 mx-auto">
        <div class="form-row">
            <div class="form-group col-lg-5">
                Regions
                {{ form_widget(form.region) }}
            </div>
            <div class="form-group col-lg-5">
                Search by name
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-lg-5">
                From Date
                {{ form_widget(form.from_date) }}
            </div>
            <div class="form-group col-lg-5">
                To Date
                {{ form_widget(form.to_date) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-lg-1">
                {{ form_widget(form.period, {label_attr: {class: 'checkbox-custom'} }) }}
            </div>
            <div class="form-group col-lg-1">
                {{ form_widget(form.reserved, {label_attr: {class: 'checkbox-custom'} }) }}

            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                {{ form_widget(form.submit) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
