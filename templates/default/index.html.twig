{% extends 'base.html.twig' %}

{% block title %} Index {% endblock %}
{% block body %}
    <div class="wrapper ">
        <div class="main-panel">
            {{ include('navigation.html.twig') }}
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                    {% for region in regions %}
                        <div class="col-lg-2 col-md-6 col-sm-6">
                            <div class="card card-stats">
                                <div class="card-header card-header-warning card-header-icon">
                                    <div class="card-icon">
                                        <h2>0{{ region.regionId }}</h2>
                                    </div>
                                </div>
                                <h4 class="p-lg-3">{{ region.name }}</h4>
                                <div class="card-footer">
                                    <div class="stats">
                                        <a href="{{ path('restaurants',{'region':region.regionId}) }}">
                                            <i class="material-icons" style="top:0px">search</i> Kerko ketu
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}



